<UserControl x:Class="Skill_Dashboard.UserControls.Info"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.io/icons/" 
             mc:Ignorable="d" Name="info">

    <StackPanel>
        <fa:ImageAwesome Icon="CircleOutline" Width="20" Height="20" Foreground="{Binding Path=Color,ElementName=info}" Margin="0 0 0 7"/>
        <TextBlock Text="{Binding Path=Title,ElementName=info}" Foreground="#303A4F" HorizontalAlignment="Center" FontWeight="SemiBold"/>
        <TextBlock Text="{Binding Path=Desc,ElementName=info}" Foreground="#9CA2B3" HorizontalAlignment="Center" Margin="0 3 0 0"/>
    </StackPanel>

</UserControl>